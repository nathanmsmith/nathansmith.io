:root {
  --color-cs: #003b5c;
  --color-dh: #fdca40;
  --color-la: #3492d1;
  --color-datadog: #774aa4;
  --color-ucla: #3284bf;
  --color-keybase: #fd7039;
  --color-autodesk: #87bc40;
  --color-dailybruin: #0080c6;
  --color-acm: #3b59ed;
  --color-uclaradio: #e76c9c;
  --color-github: #24292e;
  --color-linkedin: #0077b5;
  --color-stripe: #32325d;
  --color-facebook: #5890ff;
  --color-commboard: #005072;
}

@media (prefers-color-scheme: dark) {
  :root {
    --color-github: #fff;
    --color-stripe: #fff;
  }
}

a[href*='ceils.ucla.edu/learningassistants'] {
    color: var(--color-la);
  }

a[href*='www.ucla.edu'] {
    color: var(--color-ucla);
  }

a[href*='dh.ucla.edu'] {
    color: var(--color-dh);
  }

a[href*='www.cs.ucla.edu'] {
    color: var(--color-cs);
  }

a[href*='datadoghq.com'] {
    color: var(--color-datadog);
  }

a[href*='keybase.io'] {
    color: var(--color-keybase);
  }

a[href*='autodesk.com'] {
    color: var(--color-autodesk);
  }

a[href*='dailybruin.com'] {
    color: var(--color-dailybruin);
  }

a[href*='uclaradio.com'] {
    color: var(--color-uclaradio);
  }

a[href*='github.com'] {
    color: var(--color-github);
  }

a[href*='linkedin.com'] {
    color: var(--color-linkedin);
  }

a[href*='stripe.com'] {
    color: var(--color-stripe);
  }

a[href*='facebook.com'] {
    color: var(--color-facebook);
  }

a[href*='uclacommunicationsboard.org'] {
    color: var(--color-commboard);
  }
